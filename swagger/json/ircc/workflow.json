            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "draft": {
                      "type": "object",
                      "properties": {
                        "header": {
                          "type": "object",
                          "properties": {
                            "identifier": {
                              "type": "string",
                              "example": "CB51626B-CF45-2AA0-3A24-459669DDCC34"
                            }
                          }
